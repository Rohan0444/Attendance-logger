<% layout("/layouts/boilerplate2") %>

<body class="bg-light">
  <div class="container mt-5">
    <div class="card shadow-sm">
      <div class="card-header bg-primary text-white">
        <h4 class="mb-0">Edit Faculty Profile</h4>
      </div>
      <div class="card-body">
        <form action="/faculty/edit/<%= faculty._id %>" method="POST">
          <div class="mb-3">
            <label for="fullName" class="form-label">Full Name</label>
            <input type="text" class="form-control" id="fullName" name="fullName" required value="<%= faculty.fullName %>">
          </div>

          <div class="mb-3">
            <label for="email" class="form-label">Email (cannot be changed)</label>
            <input type="email" class="form-control" id="email" name="email" value="<%= faculty.email %>" disabled>
          </div>

          <div class="mb-3">
            <label for="facultyId" class="form-label">Faculty ID</label>
            <input type="text" class="form-control" id="facultyId" name="facultyId" required value="<%= faculty.facultyId %>">
          </div>

          <div class="mb-3">
            <label for="department" class="form-label">Department</label>
            <select class="form-select" id="department" name="department" required>
              <% ["CSE", "ECE", "EEE", "CE", "BT", "ME", "MME"].forEach(dep => { %>
                <option value="<%= dep %>" <%= faculty.department === dep ? "selected" : "" %>><%= dep %></option>
              <% }); %>
            </select>
          </div>

          <div class="mb-3">
            <label for="designation" class="form-label">Designation</label>
            <select class="form-select" id="designation" name="designation" required>
              <% ["Professor", "Associate Professor", "Assistant Professor"].forEach(role => { %>
                <option value="<%= role %>" <%= faculty.designation === role ? "selected" : "" %>><%= role %></option>
              <% }); %>
            </select>
          </div>

          <div class="text-end">
            <button type="submit" class="btn btn-success">Save Changes</button>
            <a href="/faculty/<%= faculty._id %>" class="btn btn-secondary ms-2">Cancel</a>
          </div>
        </form>
      </div>
    </div>
  </div>
</body>